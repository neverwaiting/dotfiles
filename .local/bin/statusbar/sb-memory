#!/bin/sh

case $BLOCK_BUTTON in
	1) notify-send "ðŸ§  Memory hogs" "$(ps axch -o cmd:15,%mem | sed 's/./&|/16' | awk -F'|' '{p[$1]+=$2} END {for (i in p) {print p[i],i,p[i]}}' | sort -r -nk1 | sed 's/^\S*\s//' | head)" ;;
	2) setsid -f "$TERMINAL" -e htop ;;
	3) notify-send "ðŸ§  Memory module" "\- Shows Memory Used/Total.
- Click to show memory hogs.
- Middle click to open htop." ;;
	6) "$TERMINAL" -e "$EDITOR" "$0" ;;
esac

free --mebi | sed -n '2{p;q}' | awk '{printf ("ðŸ§ %2.2fGiB/%2.2fGiB\n", ( $3 / 1024), ($2 / 1024))}'

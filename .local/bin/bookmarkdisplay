#!/bin/sh

tag_icon="ðŸ”–"
url_icon="ðŸ”—"

file="$HOME/.local/share/bookmarks/urls"
http_proxy="127.0.0.1:9000"
browser="brave-bin"

sed -i 's/^\s*//; s/\s*$//' "$file"

url=$(awk -v tagicon="$tag_icon" -v urlicon="$url_icon" '{
if (/^# /) { sub(/^# /,""); tag=$0 }
else if (!/^$/) printf("%s%s ïŠ’%s%s\n",tagicon,tag,urlicon,$0)
}' "$file" | column -t -s"ïŠ’" | dmenuwrap -i -l 30 -p Bookmarks: | sed "s/^$tag_icon.*$url_icon\s*//")

[ -n "$url" ] || exit 1

if ps aux | grep "$browser" | grep -qv grep; then
  xdg-open "$url"
else
  if netstat -tan | grep -qE ".*$http_proxy\s+.*LISTEN\s*$"; then
    brave --proxy-server="$http_proxy" "$url"
  else
    brave "$url"
  fi
fi
